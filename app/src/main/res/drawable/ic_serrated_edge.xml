<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" />
                <stroke
                    android:width="4dp"
                    android:color="@color/black" />
            </shape>
        </rotate>
    </item>
</layer-list>
