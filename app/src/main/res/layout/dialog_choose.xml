<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/sign_up_rider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/sign_up_for_rider"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/vc_passenger"
        />
    <Button
        android:id="@+id/sign_up_driver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_rider"
        android:text="@string/sign_up_for_driver"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/vc_driver"
        />

</androidx.constraintlayout.widget.ConstraintLayout>